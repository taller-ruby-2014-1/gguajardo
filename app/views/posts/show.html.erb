<p>
	<strong>Title: </strong>
	<%= @post.title %>
</p>

<p>
	<strong>Text:</strong>
	<%= @post.text %>
</p>

<h2>Comentarios </h2>
<% @post.comments.each do |comment| %>
<p>
	<strong>Commenter:</strong>
	<%= comment.commenter %>
</p>

<p>
	<strong>Comment</strong>
	<%= comment.body %>
</p>

<p><%= link_to 'Destroy Comment', [comment.post, comment], method: :delete, data: {confirm: '¿Estás seguro?'} %></p>

<% end %>



<h2>Agrega un comentario </h2>

<%= form_for([@post, @post.comments.build], html:{class: 'comm-form'}) do |f| %>
	<p>
		<%= f.label :commenter %><br>
		<%= f.text_field :commenter %><br>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
	</p>
	<p>
		<%= f.submit %><br>
	</p>
<% end %>


<p><%= link_to "Back", posts_path %></p>
<p><%= link_to "Edit", edit_post_path(@post) %></p>